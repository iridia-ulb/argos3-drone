<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="100" ticks_per_second="5" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="drone">
      <actuators />
      <sensors>
        <drone_cameras_system implementation="default">
          <camera id="arm0"
                  device="/dev/video0" 
                  capture_resolution="1024,768"
                  processing_resolution="1024,768"
                  processing_offset="0,0"/>
          <camera id="arm1"
                  device="/dev/video2" 
                  capture_resolution="1024,768"
                  processing_resolution="1024,768"
                  processing_offset="0,0"/>
          <camera id="arm2"
                  device="/dev/video4" 
                  capture_resolution="1024,768"
                  processing_resolution="1024,768"
                  processing_offset="0,0"/>
          <camera id="arm3"
                  device="/dev/video6" 
                  capture_resolution="1024,768"
                  processing_resolution="1024,768"
                  processing_offset="0,0"/>
        </drone_cameras_system>
        <drone_system implementation="default" /> 
      </sensors>
      <params script="@CMAKE_INSTALL_PREFIX@/share/argos3/testing/test_cameras.lua" />
    </lua_controller>
  </controllers>

</argos-configuration>
